### Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  echo -e "\e[91mERROR:\e[0m functionlib not found!" >&2
  exit 1
fi

## Functions ##

flatpak_version() {
  flatpak --version
}

install_flatpak() {
  if exists flatpak; then
    printf "%s is already installed.\n" "$(flatpak_version)"
    return
  fi
  echo "Installing Flatpak..."
  sudo_login 2
  sudo apt update -qq
  sudo apt install -y flatpak
  exists flatpak || die "Flatpak installation failed." 1
  printf "%s installed.\n" "$(flatpak_version)"
}

install_flathub() {
  printf "Installing Flathub repository ...\n"
  sudo flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
  printf "Flatbhub installed.\n"
}

install_gnome_plugin() {
  # Install only if using Gnome Desktop or Gnome Software Store
  printf "Installing the Gnome software plugin for Flatpak ...\n"
  sudo apt install -y gnome-software-plugin-flatpak
  printf "Gnome software plugin installed.\n"
}

main() {
  local -r script="${0##*/}"
  local -r version="1.4.25296"
  printf "Installs Flatpak and Flathub repository.\n"
  install_flatpak
  exists gnome-software && install_gnome_plugin
  install_flathub
  over_line "$script $version"
  exit
}

## Execution ##

main "$@"
