### Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

set -eu

## Global Variables ##

readonly script="${0##*/}"
readonly version="1.7.25295"

## Functions ##

help() {
  local errcode="${1:=-2}"
  local updated="22 Oct 2025"
  cat << _HELP_
${orange}$script${normal} $version ($updated)
Installs/Removes C-Matrix

${green}Usage:${normal} $script [-hir]
${orange}Available options:${normal}
  -h  Show this help message and exit.
  -i  Install C-Matrix.
  -r  Remove C-Matrix.
_HELP_
  exit "$errcode"
}

install_cmatrix() {
  printf "Installing C-Matrix...\n"
  sudo apt-get update -qq
  sudo apt-get install cmatrix cmatrix-xfont -yy
  exists cmatrix || die "cmatrix installation failed." 1
  printf "C-Matrix installed.\n"
}

remove_cmatrix() {
  printf "Removing C-Matrix...\n"
  sudo apt-get remove cmatrix cmatrix-xfont -yy
  printf "C-Matrix removed.\n"
}

main() {
  local noOpt opt optstr
  noOpt=1
  optstr=":hir"
  while getopts "$optstr" opt; do
    case "$opt" in
      h )
        help 0
        ;;
      i )
        if exists cmatrix; then
          printf "C-Matrix already installed.\n"
        else
          sudo_login 2
          install_cmatrix
        fi
        ;;
      r )
        if exists cmatrix; then
          sudo_login 2
          remove_cmatrix
        else
          printf "C-Matrix is not installed.\n"
        fi
        ;;
      ? )
        printf "%s Invalid option -%s\n" "$RED_ERROR" "$OPTARG" >&2
        help 2
    esac
    noOpt=0
  done
  [[   "$noOpt" == 1 ]] && { printf "%s No argument passed.\n" "$RED_ERROR" >&2; help 1; }
  shift "$(( OPTIND - 1 ))"
  over_line "$script $version"
  exit
}

## Execution ##

main "$@"