#!/usr/bin/env bash
#####################################################################
# Script Name  : install-cnatrix
# Description  : installs cmatrix
# Dependencies : apt, sudo
# Arguments    : none
# Author       : Richard Romig
# Email        : rick.romig@gmail.com
# Comment      : requires sudo/root access
# TODO (rick)  :
# License      : GNU General Public License, version 2.0
###############################################################################

### Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib
# shellcheck disable=SC1091

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Variables ##

readonly _script=$(basename "$0")
readonly _version="v1.0.8"
readonly _updated="04 Jan 2022"

## Execution ##

printf "%s v%s (%s)\n" "$_script" "$_version" "$_updated"
printf "Installs C-Matrix\n\n"

exists cmatrix && leave "C-Matrix already installed."

printf "Installing C-Matrix...\n"
sudo apt update -qq
sudo apt install cmatrix cmatrix-xfont -yyq
leave "C-Matrix installed."
