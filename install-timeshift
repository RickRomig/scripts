#!/usr/bin/env bash
#############################################################################
# Script Name  : install-timeshift
# Description  : Installs Timeshift on Ubuntu
# Dependencies : None
# Arguments    : None
# Author       : Richard B. Romig, 27 Jan 2020
# Email        : rick.romig@gmail.com
# Comments     :
# TODO (Rick)  :
# License      : GNU General Public License, version 2.0
#############################################################################

## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib
# shellcheck disable=SC1091

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  echo -e "\e[91mERROR:\e[0m functionlib not found!" >&2
  exit 1
fi

## Variables ##

readonly _script=$(basename "$0")
readonly _version="0.1.4"
readonly _updated="05 May 2021"

## Execution ##

echo "$_script v$_version ($_updated)"
echo "Installs Timeshift on Debian/Ubuntu-based systems."

if exists timeshift; then
  leave "Timeshift is installed."
elif support_ppa; then
  echo $'\n'$"Installing Timeshift."
  sudo apt-add-repository ppa:teejee2008/ppa -y
  sudo apt install timeshift -yy
  leave "Timeshift installed."
elif in_repos timeshift; then
  echo $'\n'$"Installing Timeshift."
  sudo apt install timeshift -yy
  leave "Timeshift installed."
else
  echo $'\n'$"Timeshift was not installed."
  leave "Not found in repositories or PPA is not supported."
fi
