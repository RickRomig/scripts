## Global variables ##
_script=$(basename "$0"); readonly _script
_version="1.0.24155"

## Execution ##

echo "$_script v$_version"
# Install timeshift
sudo apt-get -y timeshift
# configure timeshift
[[ -f ./timeshift.json ]] || cp /etc/timeshift/default.json ./timeshift.json
sed -i.bak -f ./timeshift.sed ./timeshift.json
sed -i 's/^"/    "/' ./timeshift.json
echo "Timeshift installed and configured."
exit
