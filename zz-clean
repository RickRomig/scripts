#!/usr/bin/env bash

# Script to clean apt cache and remove orphaned packages & obsolute config files.
# Anacron - copy to /etc/cron.monthly/
# Cron - copy to /usr/local/bin/ or /opt/bin/
# Last updated: 22 Apr 2024
# License: GNU General Public License, version 2.0

set -euo pipefail

log_dir="/var/log"
log_file="clean.log"
log_date=$(date '+%a %F %R')
 rcpkgs=$(dpkg --list | awk '/^rc/ {print $1,$2}')

{
  printf "Autoclean log: %s\n" "$log_date"
  printf "\nCleaning APT cache...\n"
  DEBIAN_FRONTEND=noninteractive apt-get autoclean
  printf "\nRemoving orphaned packages...\n"
  DEBIAN_FRONTEND=noninteractive apt-get autoremove -yy
  printf "\nPurging obsolete configuratino files\n"
  if [[ $rcpkgs ]]; then
    for rcpkg in $(dpkg --list | awk '/^rc/ {print $2}'); do
      DEBIAN_FRONTEND=noninteractive apt-get remove --purge "$rcpkg" -yy
    done
  else
    printf "No packages in the 'rc' state to be purged.\n"
  fi
} > "$log_dir/$log_file" 2>&1

exit
