## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

set -eu

## Global Variables ##

readonly script="${0##*/}"
readonly version="2.1.25277"

## Functions ##

help() {
	local errcode="${1:-2}"
	local -r updated="04 Oct 2025"
	cat << _HELP_
${orange}$script${normal} $version ($updated)
Installs/Removes/Configures Kitty terminal emulator

${green}Usage:${normal} $script [-hir]
${orange}Available options:${normal}
  -h  Show this help message and exit
  -i  Install Kitty from distro repositories
  -r  Remove Kitty from system
_HELP_
  exit "$errcode"
}

kitty_version() {
  kitty --version | cut -d' ' -f2
}

install_kitty() {
  printf "Installing the kitty terminal emulator.\n"
  sudo apt-get install -y kitty imagemagick
  printf "Kitty %s installed.\n" "$(kitty_version)"
}

remove_kitty() {
  printf "Purging the Kitty terminal emulator %s\n" "$(kitty_version)"
  sudo apt-get purge kitty -yy
  [[ -L ~/.config/kitty/kitty.conf ]] && unlink ~/.config/kitty/kitty.conf
  [[ -L ~/.config/kitty/bindings.list ]] && unlink ~/.config/kitty/bindings.list
  find ~/.config -maxdepth 2 -type d -name kitty -exec rm -rf {} \;
  [[ -d ~/.cache/kitty ]] && rm -rf ~/.cache/kitty
  printf "The Kitty terminal emulator and configuration files have been removed.\n"
}

kitty_config() {
  [[ -d ~/.config/kitty ]] || mkdir -p ~/.config/kitty
  printf "Applying configuration files ...\n"
  [[ -f ~/.config/kitty/kitty.conf ]] && rm ~/.config/kitty/kitty.conf
  [[ -f ~/.config/kitty/bindings.list ]] && rm ~/.config/kitty/bindings.list
  if [[ -d ~/gitea/configs ]]; then
    ln -sv ~/gitea/configs/kitty/kitty.conf ~/.config/kitty/kitty.conf
	  ln -sv ~/gitea/configs/kitty/bindings.list ~/.config/kitty/bindings.list
  elif [[ -d ~/Downloads/configs ]]; then
    ln -sv ~/Downloads/configs/kitty/kitty.conf ~/.config/kitty/kitty.conf
	  ln -sv ~/Downloads/configs/kitty/bindings.list ~/.config/kitty/bindings.list
  fi
  printf "kitty configuration files applied.\n"
}

main() {
  check_package git
  local noOpt opt optstr
  noOpt=1
  optstr=":hir"
  while getopts "$optstr" opt; do
    case "$opt" in
      h )
        help 0
        ;;
      i )
        if exists kitty; then
          printf "Kitty terminal emulator %s already installed.\n" "$(kitty_version)"
        else
          sudo_login 2
          install_kitty
          kitty_config
        fi
        ;;
      r )
        if exists kitty; then
          sudo_login 2
          remove_kitty
        else
          printf "Kitty is not installed.\n"
        fi
        ;;
      ? )
        printf "%s Invalid option -%s\n" "$RED_ERROR" "$OPTARG" >&2
        help 2
    esac
	  noOpt=0
  done
  [[ "$noOpt" = 1 ]] && { printf "%s No argument passed.\n" "$RED_ERROR" >&2; help 1; }
  shift "$(( OPTIND - 1 ))"
  over_line "$script $version"
  exit
}

## Execution ##

main "$@"
