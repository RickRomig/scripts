## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Functions ##

find_images() {
  local images
  images=$(find . -maxdepth 1 -type f -iname "*.jp*g" | wc -l)
  [[ "$images" -gt 0 ]] && return "$TRUE" || return "$FALSE"
}

resize_pics() {
  local size image
  size="$1"
  [[ -d ./resized ]] || mkdir -p ./resized
  printf "Creating resized images in ./resized...\n"
  for image in *.jpg; do
    convert "$image" -resize "$size"x"$size" resized/"${image%}"
  done
}

rename_extensions() {
  # rename *.JPG, *.JPEG, *.jpeg to *.jpg
  find . -maxdepth 1 -type f -iname "*.jp*g" -exec rename 's/\.JPE?G$/\.jpg/i' {}  \;
}

main() {
	local script="${0##*/}"
  local version="1.6.26004"
	local size="${1:-800}"
  if find_images; then
    check_package imagemagick
    rename_extensions
    resize_pics "$size"
  else
    printf "No JPEG images in current directory to process.\n"
  fi
  over_line "$script $version"
  exit
}

## Execution ##

main "$@"
