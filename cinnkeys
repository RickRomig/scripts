## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Global Variables ##

readonly script="${0##*/}"
readonly version="4.1.25346"
readonly config_dir="$HOME/.config"
readonly bindings_file="keybindings-backup.dconf"
readonly bindings_path="/org/cinnamon/desktop/keybindings/"

## Functions ##

help() {
  local errcode="${1:-1}"
  local -r updated="12 Dec 2025"
  cat << _HELP_
${orange}$script${normal} $version, Upated: $updated
Creates a backup file of Cinnamon keybindings and restores from a backup file.

${green}Usage:${normal} $script [-vc] [-vd] [-h] [-vl]
${orange}Available options:${normal}
  -c  Copy Cinnamon keybindings from GitHub repo to ~/.config and load keybindings.
  -d  Dump Cinnamon keybindings to a file in ~/.config.
  -h  Show this help message and exit.
  -l  Load Cinnamon keybindings from the ~/.config backup file.
_HELP_
  exit "$errcode"
}

dump_to_config() {
  printf "Dumping keybindings to backup file.\n"
  dconf dump "$bindings_path" > "$config_dir/$bindings_file"
  printf "Cinnamon Keybindings dumped to %s/%s\n" "$config_dir" "$bindings_file"
}

load_from_config() {
  printf "Loading keybindings from backup file.\n"
  dconf load "$bindings_path" < "$config_dir/$bindings_file"
  printf "Cinnamon Keybindings loaded from %s/%s\n" "$config_dir" "$bindings_file"
}

copy_from_repo() {
  local -r gh_url="https://raw.githubusercontent.com/RickRomig/configs/refs/heads/main/mint"
  local dl_dir="$HOME/Downloads/configs/mint"
  [[ -d ~/gitea/configs/mint ]] && dl_dir="$HOME/gitea/configs/mint"
  printf "Copying Cinnamon keybindings from repository...\n"
  if [[ -d "$dl_dir" ]]; then
    cp -v "$dl_dir/$bindings_file" "$config_dir/"
  else
    curl -so "$config_dir/$bindings_file" "$gh_url/$bindings_file"
  fi
  printf "Cinnamon keybindings copied from respository.\n"
}

main() {
  if is_cinnamon; then
    local noOpt optstr opt OPTARG OPTIND
    noOpt=1
    optstr=":cdhl"
    while getopts "$optstr" opt; do
      case "$opt" in
        c )
          copy_from_repo
          load_from_config
          ;;
        d )
          dump_to_config
          ;;
        h )
          help 0
          ;;
        l )
          if [[ -f "$config_dir/$bindings_file" ]]; then
            load_from_config
          else
            printf "Cinnamon Keybindings backup does not exist.\n" >&2
            printf "%s -c to download keybindings from repository or\n" "$script"
            printf "%s -d to dump current keybindings to %s/%s.\n" "$script" "${config_dir##*/}" "$bindings_file"
          fi
          ;;
        ? )
          printf "%s Invalid option -%s\n" "$RED_ERROR" "$OPTARG" >&2
          help 2
      esac
      noOpt=0
    done
    [[ "$noOpt" = 1 ]] && { printf "%s No argument passed.\n" "$RED_ERROR" >&2; help 1; }
    shift "$(( OPTIND - 1 ))"
  else
    printf "The desktop environment is not Cinnamon.\n" >&2
  fi
  over_line "$script $version"
  exit
}

## Execution ##

main "$@"
