## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Global Variables ##

## Functions ##

print_header() {
  local space_42
  space_42=$(for i in {1..42};do echo -n " ";done)
  echo $'\n'$"${space_42}${bold}${green}Bullshit Meter${normal}"
  scale_numbers
  scale_marks
}

scale_numbers() {
  local i j index
  index=0
  printf "%s" "$index"
  for i in {1..10}; do
    for j in {1..8}; do
      printf " "
    done
    index=$(( index + 10 ))
    printf "%s" "$index"
  done
  printf "\n"
}

# shellcheck disable=SC2034 # SC2034 (warning): j appears unused. Verify use (or export if used externally).
scale_marks() {
  local i j
  printf "|"
  for i in {1..10}; do
    for j in {1..9}; do
      printf "-"
    done
    printf "|"
  done
  printf "\n"
}

print_indicator() {
  local level="$1"
  printf "%s%s" "$bold" "$orange"
  for (( i=0; i <= "$level"; i++ )); do
    printf "*"
  done
  printf "%s\n" "$normal"
}

print_analysis() {
  local level="$1"
  printf "Your statement has been analyzed and found to be %s%% bullshit -- " "$level"
  case "$level" in
    0 )
      printf "absolutely true\n"
    ;;
    [1-9] )
      printf "very likely true.\n"
    ;;
    1[0-9] )
      printf "mostly true.\n"
    ;;
    [2-4]? )
      printf "somewhat true.\n"
    ;;
    [5-6]? )
      printf "might be false.\n"
    ;;
    [7-8]? )
      printf "probably false.\n"
    ;;
    9[0-9] )
      printf "mostly false.\n"
    ;;
    * )
      printf "absolutely false!\n"
  esac
}

print_disclaimer() {
  cat << _EOF_
${green}Welcome to the Luddite Geek Universal Bullshit Detector.${normal}
Enter a statement to be verified and wait for it to be analyzed.
Once its bullshit content has been determined, the results will be displayed.

${orange}Disclaimer:${normal}
This program is for entertainment purposes only and its accuracy cannot be guaranteed.

_EOF_
}

main() {
  local bs_level script version
  script=$(basename "$0")
  version="5.2.24274"
  bs_level=$(shuf -i 0-100 -n 1)

  clear
  print_disclaimer
  read -rp "Statement to be analyzed: " _statement
  printf "\nAnalyzing your statement "
  dots "."
  sleep "$(shuf -i 1-20 -n 1)"
  kill "$!"
  printf "\n"
  tput cnorm
  print_header
  print_indicator "$bs_level"
  print_analysis "$bs_level"
  printf "\n%s v%s\n" "$script" "$version"
  exit
}

## Execution ##

main "$@"