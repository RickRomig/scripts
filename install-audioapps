#!/usr/bin/env bash
###############################################################################
# Script Name  : install-audioapps
# Description  : installs audio applications and utilities
# Dependencies : None
# Arguments    : None
# Author       : Copyright (C) 2019, Richard B. Romig, 01 March 2019
# Email        : rick.romig@gmail.com | rick.romig@mymetronet.net
# Comments     : 
# TODO (rick)  : 
# License      : GNU General Public License, version 2.0
###############################################################################

## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib
# shellcheck disable=SC1091

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!" >&2
  exit 1
fi

## Variables ##

_script=$(basename "$0"); readonly _script
readonly _version="v1.3.0"
readonly _updated="06 Sep 2023"

## Functions ##

install_from_repos() {
  printf "\nInstalling audio applications and utilities from repositories.\n"
  sudo apt-get install -yy asunder lame easytag audacity
}

install_mp3gain() {
  if in_repos mp3gain; then
    printf "Installing mp3gain...\n"
    sudo apt-get install -yy mp3gain
  else
    printf "mp3gain is not available in repo.\n"
  fi
}

list_installed_apps() {
  local apps=( asunder audacity easytag lame mp3gain )
  printf "Audio applications installed:\n"
  for app in "${apps[@]}"; do
    exists "$app" && printf "\t%s\n" "${app^}"
  done
}

## Execution ##

user_in_sudo

# Update apt cache
sudo apt update -qq

# clear
printf "%s v%s (%s)\n" "$_script" "$_version" "$_updated"
printf "Installs audio applications on Debian/Ubuntu-based systems.\n"

install_from_repos
install_mp3gain
list_installed_apps
leave "Audio applications and utilities installed."
