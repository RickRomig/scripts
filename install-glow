#!/usr/bin/env bash
##########################################################################
# Script Name  : install-glow
# Description  : Installs, updates, and removes the Glow markdown reader.
# Dependencies : curl, gdebi, wget
# Arguments    : [-h] [-i] [-r] (See help function)
# Author       : Copyright (C) Richard B. Romig, 10 Jan 2022
# Email        : rick.romig@gmail.com
# Comments     :
# 30 Jan 2022  : Added confirmation for install/update.
# 15 Feb 2022  : Changed method for `new_ver` variable assignment.
# 22 Feb 2022  : Incorporated `getopts` to process options.
# 01 Mar 2022  : Fixed new_ver function to get 7th field of download URL.
# 11 Mar 2022  : Added function to extract installed version of glow.
# 29 Mar 2022  : Added $OPTARG to Invalid option message.
# 05 May 2022  : Replaced curl with wget for consistency.
# 12 May 2022  : Added optstr and opt variables to getopts routine.
# 01 Sep 2022  : -u option updates installed version only. Does not do initial install.
# 02 Sep 2022  : Removed confirm_install, unnecessary.
# 07 Sep 2022  : Moved existence checks out of functions to getopts.
# 13 Sep 2022  : Changed install/remove methods due to changes by developer.
# 06 Oct 2022  : Changed code for charm.list and trusted key per developer change.
# 27 Oct 2022  : Changed test if glow is installed to a local function.
# TODO (Rick)  :
# License      : GNU General Public License, version 2.0
##########################################################################

## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib
# shellcheck disable=SC1091,SC2034

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Variables ##

readonly _script=$(basename "$0")
readonly _version="0.4.3"
readonly _updated="27 Oct 2022"
readonly src_list="/etc/apt/sources.list.d/charm.list"

## Functions ##

install_app() {
  echo "Installing the Glow markdown reader..."
  echo "deb https://repo.charm.sh/apt/ * *" | sudo tee "$src_list"
  curl -s https://repo.charm.sh/apt/gpg.key | sudo apt-key add -
  sudo -s apt update && sudo apt install glow -yy
  echo "glow $(glow_ver) successfully installed."
}

remove_app() {
  echo "Removing the Glow markdown reader..."
  sudo apt-get remove glow
  [[ -f "$src_list" ]] && rm -v "$src_list"
  echo "Glow markdown reader has been removed."
}

glow_ver() {
  glow --version | awk '{print $3}'
}

check_dependencies() {
  check_package curl
}

exists_glow() {
  dpkg -l | grep -qw glow && return "$TRUE" || return "$FALSE"
}

help() {
  local errcode="${1:-2}"
  cat << END_HELP
${green}Usage:${normal} $_script [OPTION]
${orange}OPTIONS:${normal}
  -h    Displays help.
  -i    Installs the glow markdown reader.
  -r    Removes the glow markdown reader from the system.
END_HELP
  printf "\U1F427 %s v%s (%s)\n" "$_script" "$_version" "$_updated"
  exit "$errcode"
}

## Execution ##

check_dependencies
printf "Installs or removes the Glow markdown reader.\n"

if [[ "$#" -eq 0 ]]; then
  echo "${lightred}ERROR:${normal} No argument passed." >&2
  help 2
else
  optstr=":hir"
  while getopts "$optstr" opt; do
    case "$opt" in
      h )
        help 0
        ;;
      i )
        exists_glow && leave "Glow $(glow_ver) is already installed."
        user_in_sudo
        echo "${lightyellow}Installing Glow markdown reader...${normal}"
        install_app
        ;;
      r )
        exists_glow || leave "Glow is not installed. Run '$_script -i' to install."
        user_in_sudo
        remove_app
        ;;
      ? )
        echo "${lightred}ERROR:${normal} Invalid option -${OPTARG}" >&2
        help 2
        ;;
    esac
  done
fi
printf "%s v%s (%s)\n" "$_script" "$_version" "$_updated"
exit