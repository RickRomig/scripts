## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 81
fi

## Global Variables ##

readonly script="${0##*/}"
readonly version="3.2.26040"

## Functions ##

help() {
	local errcode="${1:-1}"
	local updated="09 Feb 2026"
  cat << _HELP_
${orange}$script${normal} $version ($updated)
Install/Remove Handbrake video transcorder

${green}Usage:${normal} $script [OPTION]
${orange}Available options:${normal}
  -h  Show this help message and exit
  -i  Install Handbrake
  -r  Remove Handbrake
_HELP_
  exit "$errcode"
}

install_handbrake() {
  sudo_login 2
  sudo apt install -yy handbrake handbrake-cli
  if ! grep -q '^ii' <(dpkg -l handbrake 2>/dev/null); then
    printf "%s Handbrake installation failed!\n" "$RED_ERROR" >&2
    EC="$E_INSTALLATION"
    return
  fi
  echo "Handbrake installed."
}

remove_handbrake() {
  sudo_login 2
  sudo apt autoremove handbrake handbrake-cli -yy
  echo "Handbrake removed from system."
}

main() {
  local noOpt opt optstr OPTARG OPTIND
  noOpt=1
  optstr=":hir"
  while getopts "$optstr" opt; do
    case "$opt" in
      h )
        help 0
        ;;
      i )
        exists ghb && leave "Handbrake already installed."
        install_handbrake
        ;;
      r )
        exists ghb || leave "Handbrake is not installed."
        remove_handbrake
        ;;
      ? )
        printf "%s Invalid option -%s\n" "$RED_ERROR" "$OPTARG" >&2
        help "$E_INVALID_ARG"
    esac
	  noOpt=0
  done
  [[ "$noOpt" = 1 ]] && { printf "%s No argument passed.\n" "$RED_ERROR" >&2; help "$E_MISSING_ARG"; }
  shift "$(( OPTIND - 1 ))"
  over_line "$script $version"
  exit "$EC"
}

## Execution ##

main "$@"
