## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 81
fi

## Global Variables ##

readonly script="${0##*/}"
readonly version="2.5.26029"

## Functions ##

help() {
  local errcode="${1:-1}"
  local updated="29 Jan 2026"
  cat << _HELP_
${orange}$script${normal} $version ($updated)
Log in to a remote server using Secure File Transfer Protocol (SFTP).

${green}Usage:${normal} $script [last_octet] [-h | --help]
${orange}Example:${normal} $script 15
Argument is the last octet of the remote server's IP address.
Assumes a /24 network.
_HELP_
  exit "$errcode"
}

main() {
  local hostip="$1"
  [[ "$1" == "-h" || "$1" == "--help" ]] && help 0
  [[ "$hostip" ]] || read -rp "Enter last octet of remote server's IP address. " hostip
  if valid_ip "$hostip"; then
    /usr/bin/sftp "$LOCALNET.$hostip"
  else
    help "$?"
  fi
  over_line "$script $version"
  exit
}

## Execution ##

main "$@"
