#!/usr/bin/env bash
##########################################################################
# Script Name  : install-geany
# Description  : Installs the Geany editor/IDE with themes.
# Dependencies : git
# Arguments    : -h -i -r -t (See help function)
# Author       : Copyright (C) 2022, Richard B. Romig, created: 25 Dec 2022
# Email        : rick.romig@gmail.com | rick.romig@mymetronet.net
# Comments     : Geany does not write configuration files by default.
# TODO (Rick)  :
# License      : GNU General Public License, version 2.0
##########################################################################

## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib
# shellcheck disable=SC1091

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Global Variables ##

_script=$(basename "$0"); readonly _script
readonly _version="0.2.2"
readonly _updated="20 Dec 2023"

## Functions ##

help() {
  errcode="${1:-2}"
  cat << END_HELP
Usage: $_script [OPTION]
OPTIONS:
  -h  Display help
  -i  Install Geany
  -r  Remove Geany
  -t  Install themes
END_HELP
  printf "%s v%s (%s)\n" "$_script" "$_version" "$_updated"
  exit "$errcode"
}

geany_version() {
  geany --version | cut -d' ' -f2
}

clone_themes() {
  local theme_url="https://github.com/geany/geany-themes.git"
  git clone "$theme_url" "$tmp_dir"
  install_themes
}

install_themes() {
  local cs_dir="$HOME/.config/geany/colorschemes"
  [[ -d "$cs_dir" ]] || mkdir -p "$cs_dir"
  printf "Copying Geany colorschemes into %s\n" "$cs_dir"
  cp -v "$tmp_dir/colorschemes/*.conf" "$cs_dir/" | awk -F"/" '{print "=> " $NF}' | sed "s/'//"
  printf "Geany themes installed.\n"
}

install_geany() {
  sudo apt-get install geany libvte9 -yy
  clone_themes
  printf "Geany %s installed.\n" "$(geany_version)"
}

remove_geany() {
  local geany_cfg_dir="{$HOME}/.config/geany"
  sudo apt remove geany -yy
  [[ -d "$geany_cfg_dir" ]] && rm -rf "$geany_cfg_dir"
  print "Geany and configuration files removed.\n"
}

# shellcheck disable=SC2317 # Don't warn about unreachable commands in this function
# ShellCheck may incorrectly believe that code is unreachable if it's invoked by variable name or in a trap.
cleanup() {
  [[ -d "$tmp_dir" ]] && rm -rf "$tmp_dir"
}

## Execution ##

check_package git
noOpt=1
optstr=":hirt"
while getopts "$optstr" opt; do
  case "$opt" in
    h )
      printf "%s help:\n" "$_script"
      help 0
    ;;
    i )
      exists geany && leave "Geany $(geany_version) is already installed."
      tmp_dir=$(mktemp -d) || die "Failed to create temporary directiory" 1
      trap cleanup EXIT
      sudo_login
      install_geany
    ;;
    r )
      exists geany || leave "Geany is not installed."
      sudo_login
      remove_geany
    ;;
    t )
      exists geany || leave "Geany is not installed."
      tmp_dir=$(mktemp -d) || die "Failed to create temporary directiory" 1
      trap cleanup EXIT
      clone_themes
    ;;
    ? )
      printf "%s Invalid option -%s\n" "$red_error" "$OPTARG" >&2
      help 2
  esac
  noOpt=0
done
[[ "$noOpt" = 1 ]] && { printf "%s No argument passed.\n" "$red_error" >&2; help 1; }
shift "$(( OPTIND - 1 ))"
leave "$_script v$_version ($_updated)"
