#!/usr/bin/env bash
##########################################################################
# Script Name  : install-neofetch
# Description  : Installs and configures neofetch
# Dependencies : git
# Arguments    : -c -h -i -r (See the help function for details.)
# Author       : Copyright (C) 2022, Richard B. Romig, LudditeGeek
# Email        : rick.romig@gmail.com | rick.romig@mymetronet.net
# Created      : 25 Jul 2022
# Updated      : 04 Jun 2025
# Comments     : NeoFetch is no longer in development. Highly recommnd using Fastfetch instead.
# TODO (Rick)  :
# License      : GNU General Public License, version 2.0
##########################################################################

## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Global Variables ##

readonly script="${0##*/}"
readonly version="2.5.25155"

## Functions ##

help() {
  local errcode updated
	errcode="${1:-2}"
	updated=" 04 Ju 2025"
	cat << _HELP_
${orange}$script${normal} $version ($updated)
Installs/Configures/Removes Neofetch

${green}Usage:${normal} $script [OPTION]
${orange}Available options:${normal}
  -c  Apply Neofetch configuration
  -h  Show this help message and exit
  -i  Install and configure Neofetch
  -r  Remove Neofetch and configuration
_HELP_
  exit "$errcode"
}

neofetch_installed() {
	dpkg -l neofetch > /dev/null 2>&1 && return "$TRUE" || return "$FALSE"
}

neofetch_version() {
	/usr/bin/neofetch --version | cut -d' ' -f2
}

install_neofetch() {
	local thumbnail_dir="$HOME/.cache/thumbnails/neofetch"
	printf "%s Neofetch is no longer in developemnt as of 26 April 2024.\n" "$RED_WARNING"
	sudo apt-get updates >/dev/null
	sudo apt-get install -yy neofetch
	[[ -d "$thumbnail_dir" ]] || mkdir -p "$thumbnail_dir"
	printf "Neofetch %s installed.\n" "$(neofetch_version)"
}

apply_config() {
	local repository neo_logo
	repository=$(assign_cfg_repo)
	neo_logo="neo-atheist.txt"
	[[ -d "$HOME/.config/neofetch" ]] || mkdir -p "$HOME/.config/neofetch"
  printf "Applying Neofetch configuration...\n"
	ln -s "$repository/neofetch/config.conf"  "$HOME/.config/neofetch/config.conf"
	cp -v "$repository/neofetch/$neo_logo" "$HOME/.local/share/doc/"
	printf "Neofetch configuration applied.\n"
}

remove_neofetch() {
	local neo_logo="neo-atheist.txt"
	printf "Removing Neofetch %s...\n" "$(neofetch_version)"
	sudo apt-get purge -yy neofetch
	[[ -L "$HOME/.config/neofetch/config.conf" ]] && unlink "$HOME/.config/neofetch/config.conf"
	find "$HOME/.config" -maxdepth 2 -type d -name neofetch -exec rm -rf {} \;
	[[ -d "$HOME/.cache/thumbnails/neofetch" ]] && rm -rf "$HOME/.cache/thumbnails/neofetch"
	[[ -f "$HOME/.local/share/doc/$neo_logo" ]] && rm "$HOME/.local/share/doc/$neo_logo"
	printf "Neofetch and configuration files removed.\n"
	sed -i '/neofetch/d' "$HOME/.bashrc"
}

main() {
  local noOpt opt optstr
	check_package git
	noOpt=1
	optstr=":chir"
	while getopts "$optstr" opt; do
		case "$opt" in
			c )
				neofetch_installed || leave "Neofetch is not installed."
				apply_config
			;;
			h )
				help 0
			;;
			i )
				neofetch_installed && leave "Neofetch $(neofetch_version) is already installed."
				in_repo neofetch || leave "Neofetch is no longer in the repositories."
				sudo_login 2
				install_neofetch
				apply_config
			;;
			r )
				neofetch_installed || leave "Neofetch is not installed."
				sudo_login 2
				remove_neofetch
			;;
			? )
				printf "%s Invalid option -%s\n" "$RED_ERROR" "$OPTARG" >&2
				help 2
		esac
		noOpt=0
	done
	[[ "$noOpt" = 1 ]] && { printf "%s No argument passed.\n" "$RED_ERROR" >&2; help 1; }
	shift "$(( OPTIND - 1 ))"
	over_line "$script $version"
	exit
}

## Execution ##

main "$@"
