#!/usr/bin/env bash
#####################################################################
# Script Name  : install-homebank
# Description  : Installs Homebank from PPA or distribution reposistory
# Dependencies : none
# Arguments    : none
# Author       : Copyright (C) 2018, Richard Romig, 29 November 2018
# Email        : rick.romig@gmail.com | rick.romig@mymetronet.net
# Comments     : Available as a flatpak (preferred method)
#              : https://flathub.org/apps/details/fr.free.Homebank
#              : Linux Mint Sofware Manager
# TODO (rick)  :
# License      : GNU General Public License, version 2.0
###############################################################################

## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib
# shellcheck disable=SC1091,SC2034

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Variables ##

_script=$(basename "$0"); readonly _script
readonly _version="0.4.2"
readonly _updated="16 Oct 2023"

## Functions ##

homebank_ver() {
  homebank --version | cut -d' ' -f2
}

flatpak_homebank() {
  exists flatpak || return "$FALSE"
  flatpak list | grep -qw HomeBank && return "$TRUE" || return "$FALSE"
}

flatpak_version() {
  flatpak list | awk '/HomeBank/ {print $3}'
}

add_ppa() {
  printf "Adding repository and installing HomeBank...\n"
  sudo add-apt-repository ppa:mdoyen/homebank
}

remove_ppa() {
  sudo add-apt-repository --remove ppa:mdoyen/homebank
}

install_homebank() {
  sudo_login
  support_ppa && add_ppa
  sudo apt-get install homebank -yyq
  printf "HomeBank %s installed.\n" "$(homebank_ver)"
}

remove_homebank() {
  printf "Removing HomeBank %s...\n" "$(homebank_ver)"
  sudo_login
  support_ppa && remove_ppa
  sudo apt-get remove homebank -yy > /dev/null 2>&1
  printf "HomeBank has been removed.\n"
}

purge_homebank() {
  printf "Removing HomeBank %s and purging configuration files.\n" "$(homebank_ver)"
  sudo_login
  support_ppa && remove_ppa
  sudo apt-get purge homebank -yy > /dev/null 2>&1
  printf "HomeBank and its configuration files have been removed.\n"
}

help() {
  local errcode="${1:-2}"
  cat << END_HELP
${green}Usage:${normal} $_script [option]
${orange}OPTIONS:${normal}
  -h  Display help
  -i  Install HomeBank from PPA or repository
  -p  Remove HomeBank and purge configuration files (PPA or repository)
  -r  Remove HomeBank (PPA or repository)
      HomeBank is also available as a Flatpak (Flathub or Mint Software Manager)
END_HELP
  printf "%s v%s (%s)\n" "$_script" "$_version" "$_updated"
  exit "$errcode"
}

## Execution ##

# clear
echo "Installs HomeBank Personal Finance Software."

noOpt=1
optstr=":hipr"
while getopts "$optstr" opt; do
  case "$opt" in
    h )
      help 0
    ;;
    i )
      exists homebank && leave "HomeBank $(homebank_ver) is already installed."
      flatpak_homebank && leave "HomeBank $(flatpak_version) (flatpak) is installed."
      install_homebank
    ;;
    p )
      exists hombank || leave "HomeBank (.deb) is not installed."
      purge_homebank
    ;;
    r )
      exists hombank || leave "HomeBank (.deb) is not installed."
      remove_homebank
    ;;
    ? )
      printf "%s Invalid option: -%s\n" "$red_error" "$OPTARG" >&2
      help 2
  esac
	noOpt=0
done
[[ "$noOpt" = 1 ]] && { printf "%s No argument passed.\n" "$red_error" >&2; help 1; }
shift "$(( OPTIND - 1 ))"
printf "%s v%s (%s)\n" "$_script" "$_version" "$_updated"
exit
