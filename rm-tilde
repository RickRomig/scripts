## Functions ##

remove_tilde() {
	local nbu
	nbu=$(find . -maxdepth 1 -type f -regex '\./.*~$'  | wc -l)
	printf "Removing %d '~' backup " "$nbu"
	(( nbu == 1 )) && printf "file.\n" || printf "files.\n"
	(( nbu != 0 )) && find . -maxdepth 1 -type f -regex '\./.*~$' -print -exec rm {} \;
}

main() {
	local -r script="${0##*/}"
	local -r version="3.0.25244"
	remove_tilde
	printf "%s %s\n" "$script" "$version"
	exit
}

## Execution ##

main "$@"
