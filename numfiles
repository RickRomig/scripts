#!/usr/bin/env bash
###############################################################################
# Script Name  : numfiles
# Description  : displays number of files in current directory
#              : and how much disk space they use.
# Dependencies : none
# Arguments    : none
# Author       : Copyright (C) 2018, Richard Romig, 22 November 2018
# Email        : rick.romig@gmail.com | rick.romig@mymetronet.net
# Comment      :
# TODO (Rick)  :
# License      : GNU General Public License, version 2.0
##############################################################################

## Variables ##

_script=$(basename "$0"); readonly _script
readonly _version="0.2.0"
readonly _updated="07 Sep 2023"
# curdir=$(dirname "$(readlink -f "$0")")
readonly curdir=$PWD
num=$(find . -maxdepth 1 -type f -iname \* | wc -l)
size=$(du -ch -d 1 ./* | awk '/total/ {print $1}')

## Execution ##

printf "%s contains %s " "$curdir" "$num"
(( num >1 )) && printf "files " || printf "file "
printf "using %s of disk space.\n" "$size"
printf "%s v%s (%s)\n" "$_script" "$_version" "$_updated"

exit
