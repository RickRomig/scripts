## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

set -eu

## Functions ##

assign_repo() {
	local localip repo
	localip=$(local_ip)
	case "$localip" in
		10|16|22 )
			repo="$HOME/gitea/configs"
		;;
		* )
			if [[ -d "$HOME/Download/configs" ]]; then
				pushd "$HOME/Download/configs" || die "pushd failed"
				git pull --quiet origin main
				popd || die "popd failed"
			else
				git clone --quiet "$GITEA_URL/configs.git" "$HOME/Download/configs"
			fi
			repo="$HOME/Download/configs"
	esac
	printf "%s" "$repo"
}

copy_group_list() {
  local file repository
	repository="$1"
  file="$2"
  printf "Copying %s list to /etc/dsh/group ...\n" "$file"
  sudo cp "$repository/dsh/group/$file" /etc/dsh/group/
  printf "%s list added to /etc/dsh/group\n" "$file"
}

copy_machines_list() {
  local file repository
	repository="$1"
  file="machines.list"
  printf "Copying %s to /etc/dsh/ ...\n" "$file"
  sudo cp "$repository/dsh/$file" /etc/dsh/
  printf "%s copied to /etc/dsh/\n" "$file"
  printf "Creating symbolic link from %s to /etc/dsh/group/all.\n" "$file"
  sudo ln -s /etc/dsh/machines.list /etc/dsh/group/all
}

install_dsh() {
  local group groups repository
	repository=$(assign_repo)
  groups=( desktops i3wm laptops )
  sudo apt-get -y install dsh
  printf "Changing remote shell to ssh.\n"
  sudo sed -i '/remoteshell/s/rsh/ssh/' /etc/dsh/dsh.conf
  copy_machines_list "$repository"
  for group in "${groups[@]}"; do
    copy_group_list "$repository" "$group"
  done
}

main() {
  local script version
  script=$(basename "$0")
  version="2.0.24299"
  sudo_login 2
  check_package git
  install_dsh
  over_line "$script $version"
}

## Execution ##

main "$@"
