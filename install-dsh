## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Functions ##

dsh_version() {
  awk 'NR==1 {print $NF}' <(dsh --version)
}

copy_group_list() {
	local -r repository="$1"
  local -r group_list="$2"
  printf "Copying %s list to /etc/dsh/group ...\n" "$group_list"
  sudo cp "$repository/dsh/group/$group_list" /etc/dsh/group/
  printf "The %s list added to /etc/dsh/group\n" "$group_list"
}

copy_machines_list() {
	local -r repository="$1"
  local -r file="machines.list"
  printf "Copying %s to /etc/dsh/ ...\n" "$file"
  sudo cp "$repository/dsh/$file" /etc/dsh/
  printf "%s copied to /etc/dsh/\n" "$file"
  printf "Creating symbolic link from %s to /etc/dsh/group/all\n" "$file"
  [[ -L /etc/dsh/group/all ]] || sudo ln -s /etc/dsh/machines.list /etc/dsh/group/all
}

install_dsh() {
  sudo_login 2
  sudo apt-get -y install dsh
  if ! grep -q '^ii' <(dpkg -l dsh 2>/dev/null); then
    printf "%s DSH installation failed.\n" "$RED_ERROR" >&2
    EC="$E_INSTALLATION"
    return
  fi
  local group_list group_lists repository
  printf "DSH version %s installed.\n" "$(dsh_version)"
  [[ -d /etc/dsh/group ]] || sudo mkdir -p /etc/dsh/group
	repository=$(assign_cfg_repo)
  group_lists=( desktops i3wm laptops )
  printf "Changing remote shell from rsh to ssh.\n"
  sudo sed -i '/remoteshell/s/rsh/ssh/' /etc/dsh/dsh.conf
  prinf "Copying machine and group lists...\n"
  copy_machines_list "$repository"
  for group_list in "${group_lists[@]}"; do
    copy_group_list "$repository" "$group_list"
  done
}

main() {
  local script="${0##*/}"
  local version="3.0.26033"
  EC=0
  check_package git
  sudo_login 2
  install_dsh
  over_line "$script $version"
  exit "$EC"
}

## Execution ##

main "$@"
