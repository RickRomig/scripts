#!/usr/bin/env bash
##########################################################################
# Script Name  : install-dsh
# Description  : Installs & configures DSH
# Dependencies : none
# Arguments    : none
# Author       : Copyright Â© 2024 Richard B. Romig, Mosfanet
# Email        : rick.romig@gmail.com | rick.romig@mymetronet.net
# Created      : 08 Apr 2024
# Last updated : 08 Apr 2024
# Comments     :
# TODO (Rick)  :
# License      : GNU General Public License, version 2.0
##########################################################################

## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

set -euo pipefail

## Global Variables ##

_script=$(basename "$0"); readonly _script
readonly _version="1.0.24099"
readonly dsh_path="/etc/dsh"

## Functions ##

machine_list() {
  cat << END_FILE sudo tee "$dsh_path"/machine.list > /dev/null
192.168.0.11
192.168.0.12
192.168.0.13
192.168.0.14
192.168.0.15
192.168.0.16
192.168.0.17
192.168.0.19
192.168.0.20
192.168.0.21
192.168.0.22
192.168.0.23
192.168.0.24
192.168.0.227
END_FILE
  printf "%s/machiine.list created." "$dsh_path"
}

desktop_list() {
  cat << END_FILE sudo tee "$dsh_path"/group/desktops > /dev/null
192.168.0.11
192.168.0.14
192.168.0.15
192.168.0.16
192.168.0.17
192.168.0.19
END_FILE
  printf "%s/group/desktops created." "$dsh_path"
}

laptop_list() {
  cat << END_FILE sudo tee "$dsh_path"/group/laptops > /dev/null
192.168.0.12
192.168.0.13
192.168.0.20
192.168.0.21
192.168.0.22
192.168.0.23
192.168.0.24
192.168.0.227
END_FILE
  printf "%s/group/laptops created." "$dsh_path"
}

i3wm_list() {
  cat << END_FILE sudo tee "$dsh_path"/group/i3wm > /dev/null
192.168.0.12
192.168.0.13
192.168.0.14
192.168.0.16
192.168.0.22
192.168.0.23
END_FILE
  printf "%s/group/i3wm created." "$dsh_path"
}

install_dsh() {
  sudo apt-get -yy install dsh
  sudo sed -i '/remoteshell/s/rsh/ssh/' "$dsh_path/dsh.conf"
  machine_list
  desktop_list
  laptop_list
  i3wm_list
  sudo ln -s /etc/dsh/machines.list /etc/dsh/group/all
}

## Execution ##

sudo_login 2
install_dsh
leave "$_script $_version"
