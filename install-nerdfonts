#!/usr/bin/env bash
##########################################################################
# Script Name  : install-nerdfonts
# Description  : installs nerdfonts
# Dependencies : wget unzip
# Arguments    : none
# Author       : Copyright Â© 2023 Richard B. Romig, Mosfanet
