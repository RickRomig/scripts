##########################################################################

## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

set -eu

## Global Variables ##

readonly polybar_d="$HOME/.config/polybar"
readonly repository="configs/raw/branch/main/"
readonly local_repo="$HOME/gitea/configs/polybar"
localip="$(local_ip)"; readonly localip

## Functions ##

copy_polybar_config() {
	[[ -d "$polybar_d" ]] || mkdir -p "$polybar_d"
	printf "Copying the Polybar configuration file from the Gitea server...\n"
	if [[ "$localip" == "16" ]]; then
		cp -v "$local_repo/config" "$polybar_d/"
	else
		curl -so "$polybar_d/config.ini" "$Gitea_URL/$repository/config.ini"
	fi
	printf "Polybar configuration file copied from the Gitea server.\n"
}

copy_polybar_launcher() {
	local launcher="polybar-i3"
	printf "Installing the %s launcher...\n" "$launcher"
	if [[ "$localip" == "16" ]]; then
		cp -p "$local_repo/$launcher" "$polybar_d/"
	else
		curl -so "$polybar_d/$launcher" "$Gitea_URL/$repository/$launcher"
	fi
	[[ -x "$polybar_d/$launcher" ]] || chmod +x "$polybar_d/$launcher"
	printf "%s installed.\n" "$launcher"
}

configure_polybar() {
	local cfg_file b_name e_name w_name
	cfg_file="config.ini"
	[[ "$localip" == "16" ]] && cfg_file="config"
	# Get device names from system.
	e_name=$(/usr/bin/nmcli dev | awk '/ethernet/ {print $1}')
	w_name=$(/usr/bin/nmcli dev | awk '/wifi/ {print $1}')
	b_name=$(find /sys/class/power_supply/ -name "BAT*" | awk -F/ '/BAT/ {print $5}')
	# Apply device names or exlude modules as required.
	if [[ "$w_name" ]]; then
		sed -i "s/wlan0/$w_name/" "$polybar_d/$cfg_file"
	else
		sed -i '/^modules-right/s/ wlan//' "$polybar_d/$cfg_file"
	fi
	if [[ "$e_name" ]]; then
		sed -i "s/eth0/$e_name/" "$polybar_d/$cfg_file"
	else
		sed -i '/^modules-right/s/ eth//' "$polybar_d/$cfg_file"
	fi
	if [[ "$b_name" ]]; then
		sed -i "s/BAT0/$b_name/" "$polybar_d/$cfg_file"
	else
		sed -i '/^modules-right/s/ battery//' "$polybar_d/$cfg_file"
	fi
}

main() {
  local i3_dir script version
  script=$(basename "$0")
  version="2.3.24276"
	i3_dir="$HOME/.config/i3"
	check_package curl
	printf "Installs Polybar on Debian with i3wm.\n"
	exists polybar && leave "Polybar is already installed."

	sudo apt-get install -y polybar
	copy_polybar_config
	copy_polybar_launcher
	sed -i '/policykit/a ~/.local/bin/polybar-i3 &' "$i3_dir/autostart.sh"
	sed -i '/bar/s/^/# /' "$i3_dir/config"
	configure_polybar

	leave "$script $version"
}

## Execution ##

main "$@"
