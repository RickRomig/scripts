## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Load function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Global Variables ##

readonly script="${0##*/}"
readonly version="3.1.26040"
EC=0

## Functions ##

about_fnloc() {
  cat << _ABOUT_
FnLoC (Funtion Lines of Code) is a program that counts lines of code in C source
code files, breaking out functions and the number of lines of code with them.
The program will also count lines of code in associated header files. A wrapper
script is included. View the README file for detailed information.
_ABOUT_
}

help() {
	local errcode="${1:-2}"
	local updated="1225 Nov 2025"
	cat << _HELP_
${orange}$script${normal} $version ($updated)
Installs the Function Lines of Code (FnLoC) package.

${green}Usage:${normal} $script [OPTION]
${orange}OPTIONS:${normal}
	-a  About FnLoC
	-c	Clone FnLoC repo & install .deb package
  -d  Download & install FnLoC .deb package
  -h	Show this help message and exit
	-r	Remove FnLoC
_HELP_
  exit "$errcode"
}

clone_fnloc_repo() {
  local package_dir="$1"
  local repo_name="fnloc.git"
  git clone "$GITEA_URL/$repo_name" "$package_dir"  # http://192.168.0.16:3000/Nullifidian/fnloc.git
}

dl_deb_pkg() {
  local package="$1"
  local package_dir="$2"
  local repo_path="fnloc/raw/branch/main"
  [[ -d "$package_dir" ]] || mkdir -p "$package_dir"
  curl -so "$package_dir/$package" "$GITEA_URL/$repo_path/$package"
}

fnloc_version() {
  grep '^ii' <(dpkg -l fnloc 2>/dev/null)
}

install_fnloc() {
  local package="$1"
  local package_name="$2"
  local package_dir="$3"
  sudo_login 2
  dpkg -l fnloc | grep -q '^ii' 2>/dev/null && { printf "%s already installed.\n" "$package_name"; return; }
  sudo dpkg -i "$package_dir/$package"
  if grep -q '^ii' <(dpkg -l fnloc 2>/dev/null); then
    printf "FnLoC %s successfully installed.\n" "$(fnloc_version)"
  else
    printf "%s FnLoc installation failed.\n" "$RED_ERROR" >&2
    EC="$E_INSTALLATION"
    return
  fi
  printf "%s installed.\n" "$package_name"
}

remove_fnloc() {
  local package_name="$1"
  sudo_login 2
  dpkg -l fnloc | grep -q '^ii' 2>/dev/null || { printf "FnLoC is not installed.\n"; return; }
  sudo dpkg -r fnloc
  printf "%s removed.\n" "$package_name"
}

show_header() {
  cat << _HEADER_
$script installs FnLoC (Function Lines of Code) either from the douwnload .deb package
or from the cloned repository (GitHub or my local Giteas repository). The script can
also remove the program from the system.

_HEADER_
}

main() {
  local package="fnloc_2.3.1_amd64.deb"
  local package_name="FnLoC 2.3.1"
  local package_dir="$HOME/Downloads/fnloc"
  local noOpt opt optstr OPTARG OPTIND
  noOpt=1
  optstr=":acdhr"
  while getopts "$optstr" opt; do
    case "$opt" in
      a )
        about_fnloc
        ;;
      c )
        show_header
        clone_fnloc_repo "$package_dir"
        install_fnloc "$package" "$package_name" "$package_dir"
        ;;
      d )
        show_header
        dl_deb_pkg  "$package""$package_dir"
        install_fnloc "$package" "$package_name" "$package_dir"
        ;;
      h )
        help 0
        ;;
      r )
        remove_fnloc "$package_name"
        ;;
      ? )
        printf "%s Invalid option -%s\n" "$RED_ERROR" "$OPTARG" >&2
        help "$E_INVALID_ARG"
    esac
    noOpt=0
  done
  [[ "$noOpt" = 1 ]] && { printf "%s No argument passed.\n" "$RED_ERROR" >&2; help "$E_MISSING_ARG"; }
  shift "$(( OPTIND - 1 ))"
  printf "%s v%s\n" "$script" "$version"
  exit "$EC"
}

## Execution ##

main "$@"
