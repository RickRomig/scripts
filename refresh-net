## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Functions ##

restart_network() {
  local init_sys
  init_sys=$(strings /sbin/init | awk 'match($0, /(systemd|sysvinit)/) { print toupper(substr($0, RSTART, RLENGTH));exit; }')
  case "$init_sys" in
    "SYSTEMD" )
      sudo systemctl restart NetworkManager.service ;;
    "SYSVINIT" )
      sudo service network-manager restart ;;
    * )
      die "Init system is undetermined." 1
  esac
}

main() {
	local script="${0##*/}"
  local version="2.9.25257"
  sudo_login 2
  check_package strings
  printf "Restarting network...\n"
  restart_network
  sleep 3
  over_line "$script $version"
  exit
}

## Execution ##

main "$@"
