usage() {
  local errcode="${1:-2}"
  echo "Usage: $_script <file>"
  exit "$errcode"
}

_script=$(basename "$0"); readonly _script
readonly _version="1.0.11"
readonly _updated="12 Mar 2023"

# check arguments

if [[ $# -eq 0 ]]; then
  echo -e "\e[91mError:\e[0m No arguments passed." >&2
  usage 2
elif [[ -f "$1" ]]; then
  filename="$1"
else
  echo -e "\e[91mError:\e[0m $1 not found." >&2
  usage 2
fi

echo "$_script v$_version ($_updated)"
echo "Converts DOS text files to Linux format by removing carriage return characters."

# convert the file

echo "Removing the carriage return characters from $filename while creating a backup"
echo "of the orginal file."
sed -i.bak -e 's/\r//g' "$filename"

exit
