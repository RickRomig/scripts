#!/usr/bin/env bash
##########################################################################
# Script Name  : iru-marktext
# Description  : Installs, updates, and removes the Mark Text markdown editor.
# Dependencies : curl, gdebi, wget
# Arguments    : [-h] [-i] [-r] [-u] (See help function)
# Author       : Richard B. Romig, 10 Jan 2022
# Email        : rick.romig@gmail.com
# Comments     :
# 30 Jan 2022  : Added confirmation for install/update.
# 15 Feb 2022  : Changed method for `new_ver` variable assignment.
# 22 Feb 2022  : Incorporated `getopts` to process options.
# 01 Mar 2022  : Fixed new_ver function to get 7th field of download URL.
# 07 Mar 2022  : Added line to purge config files after removing marktext.
# 08 Mar 2022  : Filters out release candidates from new versions.
# 10 Mar 2022  : Remove ~/.config/marktext/ after removing application.
# 11 Mar 2022  : Added function to extract installed marktext version.
# 29 Mar 2022  : Added $OPTARG to Invalid option message.
# 05 May 2022  : Replaced curl with wget for consistency.
# 12 May 2022  : Added optstr and opt variables to getopts routine.
# 01 Sep 2022  : -u option updates installed version only. Does not do initial install.
# 02 Sep 2022  : Removed confirm_install, unnecessary.
# 07 Sep 2022  : Moved existence checks out of functions to getopts.
# TODO (Rick)  :
# License      : GNU General Public License, version 2.0
##########################################################################

## Shellcheck Directives ##
# shellcheck source=/home/rick/bin/functionlib
# shellcheck disable=SC1091,SC2034

## Source function library ##

if [[ -x "$HOME/bin/functionlib" ]]; then
  source "$HOME/bin/functionlib"
else
  printf "\e[91mERROR:\e[0m functionlib not found!\n" >&2
  exit 1
fi

## Variables ##

readonly _script=$(basename "$0")
readonly _version="0.3.0"
readonly _updated="07 Sep 2022"
readonly url="https://github.com/marktext/marktext/releases"

## Functions ##

cleanup() {
  [[ -d "$tmp_dir" ]] && rm -rf "$tmp_dir"
  [[ -f "$tmp_file" ]] && rm -f "$tmp_file"
}

check_dependencies() {
  # check_package curl
  check_package wget
  check_package gdebi
}

mt_ver() {
  # dpkg -l | awk '$2 == "marktext" {print $3}' | sed 's/[+-].*//'
  marktext --version | awk '/MarkText/ {print $2}' | sed 's/^v//'
}

newest_version() {
  wget -qO "$tmp_file" "$url"
  # curl -s -o "$tmp_file" "$url"
  new_ver=$(sed 's/\// /g' "$tmp_file" | grep -Ev 'beta|-rc' | awk '/download/ && /amd64.deb/ {print $7;exit}' | sed 's/^v//')
  echo "$new_ver"
}

compare_versions() {
  cur_ver=$(mt_ver)
  if [[ "$cur_ver" == "$new_ver" ]]; then
    echo "${lightyellow}Marktext $cur_ver is the current version. No update required.${normal}"
  else
    echo "${lightyellow}Current version of MarkText is $cur_ver, updating to $new_ver...${normal}"
    install_app
  fi
}

install_app() {
  new_pkg="marktext-amd64.deb"
  echo "Downloading Mark Text markdown editor from the marktext GitHub repository..."
  wget -q -P "$tmp_dir/" "$url/download/v$new_ver/$new_pkg"
  sudo gdebi -n "$tmp_dir/$new_pkg"
  echo "Mark Text $(mt_ver) installed."
}

remove_app() {
  local mt_cfg_dir="$HOME/config/marktext"
  local pref_json="preferences.json"
  echo "Removing the Mark Text markdown editor..."
  sudo apt-get remove --purge marktext -yy
  [[ -f "$mt_cfg_dir/$pref_json" ]] && rm -rf "$mt_cfg_dir"
  echo "Mark Text markdown editor has been removed."
}

help() {
  local errcode="${1:-2}"
  cat << EOF
${green}Usage:${normal} $_script [OPTION]
${orange}OPTIONS:${normal}
  -h    Displays help.
  -i    Installs the Marktext markdown editor.
  -r    Removes the Marktext markdown editor from the system.
  -u    Updates the Marktext markdown editor to the latest version.
EOF
  exit "$errcode"
}

## Execution ##

check_dependencies
printf "\U1F427 %s v%s (%s)\n" "$_script" "$_version" "$_updated"
printf "Installs, updates, or removes the Mark Text markdown editor.\n"

if [[ $# -eq 0 ]]; then
  echo "${lightred}ERROR:${normal} No argument passed." >&2
  help 2
else
  optstr=":hiru"
  while getopts "$optstr" opt; do
    case "$opt" in
      h )
        help 0 ;;
      i )
        exists marktext && leave "Marktext $(mt_ver) is already installed."
        tmp_file=$(mktemp) || die "Failed to create temporary file." 1
        tmp_dir=$(mktemp -d) || die "Failed to create temporary directory." 1
        trap cleanup EXIT
        new_ver="$(newest_version)"
        echo "${lightyellow}Installing MarkText version $new_ver...${normal}"  
        install_app
        ;;
      r )
        exists marktext || leave "Marktext is not installed. Run '$_script -i' to install."
        remove_app
        ;;
      u )
        exists marktext || leave "Marktext is not installed. Run '$_script -i' to install."
        tmp_file=$(mktemp) || die "Failed to create temporary file." 1
        tmp_dir=$(mktemp -d) || die "Failed to create temporary directory." 1
        trap cleanup EXIT
        new_ver="$(newest_version)"
        compare_versions
        ;;
      ? )
        echo "${lightred}ERROR:${normal} Invalid option -${OPTARG}" >&2
        help 2
        ;;
    esac
  done
fi

exit
